# User commands
function jtmux() {
	tmux new-session -d -c ~/Downloads
	tmux new-window -d -c ~/Workspace
	tmux new-window -d -c ~/Workspace
	tmux new-window -d -c ~/Workspace
	tmux new-window -d -c /tmp
	tmux attach
}

