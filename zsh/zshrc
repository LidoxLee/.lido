    && go run ./main.go "$@" )
}

# git alias func

function gcb(){
    local branch="$1"
    git checkout -b "$branch"
}

function gac(){
    local msg="$*"
    local branch_name=$(git symbolic-ref --short HEAD 2>/dev/null)

    if [ $? -ne 0 ]; then
        echo "Error: Not in a git repository or unable to determine the branch name."
        return 1
    fi

    # 使用正則表達式檢查分支名稱是否符合票號格式 (例如: PRO-xxxx)
    if [[ "$branch_name" =~ ^PRO-[^/]+ ]]; then
        # 提取票號部分
        local ticket_number=$(echo "$branch_name" | awk -F'/' '{print $1}')
        local commit_message="[$ticket_number] $msg"
    else
        # 非票號分支名稱，直接使用 msg 作為提交訊息
        local commit_message="$msg"
    fi

    # 調試輸出
    echo "Branch name: $branch_name"
    echo "Commit message: $commit_message"

    # 執行 Git 命令
    git add .
    git commit -m "$commit_message"
}
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
